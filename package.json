{
  "name": "@gergelyszerovay/aibd-template-angular",
  "version": "1.0.0",
  "description": "An Angular boilerplate template with TailwindCSS and NgRx for AIBD development projects",
  "scripts": {
    "ng": "pnpm exec ng",
    "start": "pnpm exec ng serve --host=127.0.0.1",
    "build": "pnpm exec ng build",
    "watch": "pnpm exec ng build --watch --configuration development",
    "test": "CHROME_BIN=/usr/bin/chromium pnpm exec ng test --watch=false --no-progress --browsers=ChromeHeadless",
    "test:watch": "CHROME_BIN=/usr/bin/chromium pnpm exec ng test --watch=true --no-progress --browsers=ChromeHeadless",
    "test:coverage": "CHROME_BIN=/usr/bin/chromium pnpm exec ng test --watch=false --no-progress --browsers=ChromeHeadless --code-coverage"
  },
  "dependencies": {
    "@angular/animations": "^19.2.5",
    "@angular/common": "^19.2.5",
    "@angular/compiler": "^19.2.5",
    "@angular/core": "^19.2.5",
    "@angular/forms": "^19.2.5",
    "@angular/platform-browser": "^19.2.5",
    "@angular/platform-browser-dynamic": "^19.2.5",
    "@angular/router": "^19.2.5",
    "rxjs": "~7.8.2",
    "tslib": "^2.8.1",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.2.6",
    "@angular/cli": "^19.2.6",
    "@angular/compiler-cli": "^19.2.5",
    "@testing-library/angular": "^17.3.7",
    "@testing-library/dom": "^10.4.0",
    "@types/jasmine": "~5.1.7",
    "autoprefixer": "^10.4.21",
    "jasmine-core": "~5.6.0",
    "karma": "~6.4.4",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.1",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.8.3"
  },
  "packageManager": "pnpm@10.7.1"
}
